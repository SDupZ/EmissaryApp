<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ViewAccountActivity">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_drop_off_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"/>

    <TextView
        android:id="@+id/item_pickup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_drop_off_location"/>

    <TextView
        android:id="@+id/item_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_pickup_location"/>

    <Button
        android:id="@+id/complete_delivery"
        android:layout_below="@+id/item_notes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:text="Complete Delivery"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/abandon_delivery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:text="Abandon Delivery"
        android:textStyle="bold"
        android:theme="@style/CustomAccentOverlay"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>
