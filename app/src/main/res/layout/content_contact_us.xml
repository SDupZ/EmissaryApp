<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true" >

        <android.support.v7.widget.CardView
            android:id="@+id/general_contact_us_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            card_view:cardCornerRadius="0dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="About Us"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/about_us"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="General Enquiries"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="EmissaryApp@gmail.com"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/urgent_requests_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="0dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

                <TextView
                    android:paddingLeft="16dp"
                    style="@style/DialogMainHeading"
                    android:text="Request for Assistance"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="@string/contact_us_urgent_insr"/>

                <Spinner
                    android:id="@+id/listings_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="Describe the problem in detail below"/>

                <EditText
                    android:id="@+id/problem_text"
                    android:hint="Description"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:maxLength="2000"
                    android:maxLines="12"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <Button
                    android:id="@+id/send_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>


