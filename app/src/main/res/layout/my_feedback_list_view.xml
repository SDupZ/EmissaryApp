<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_feedback_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                tools:text="20/16/20 - 8:00pm"/>
            <TextView
                android:id="@+id/list_item_feedback_role_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                tools:text="Delivery Driver"/>

        </LinearLayout>


        <RatingBar
            android:id="@+id/list_item_rating"
            android:rating="5"
            android:isIndicator="true"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_item_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This driver was very quick and the delivery completed easy"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
